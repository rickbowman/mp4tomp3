<Window x:Class="Mp4toMp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mp4toMp3"
        mc:Ignorable="d"
        Title="Mp4 to Mp3" Height="268" Width="435" ResizeMode="NoResize">
    <Grid Background="#FF2D2D30">
        <Button x:Name="btnFilePath" Content="Open" HorizontalAlignment="Left" Margin="335,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnFilePath_Click"/>
        <Button x:Name="btnSavePath" Content="Save" HorizontalAlignment="Left" Margin="335,96,0,0" VerticalAlignment="Top" Width="75" Click="BtnSavePath_Click"/>
        <Label Content="File Path:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="320"/>
        <Label x:Name="lblFilePath" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="400"/>
        <Label Content="Save Path:" HorizontalAlignment="Left" Margin="10,96,0,0" VerticalAlignment="Top" Width="320"/>
        <Label x:Name="lblSavePath" HorizontalAlignment="Left" Margin="10,139,0,0" VerticalAlignment="Top" Width="400"/>
        <Button x:Name="btnConvert" Content="Convert" HorizontalAlignment="Left" Margin="10,182,0,0" VerticalAlignment="Top" Width="400" Click="BtnConvert_Click"/>
    </Grid>
</Window>
